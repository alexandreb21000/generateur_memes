{% extends 'layout/layout.html.twig' %}

{% block title %}
    {{ parent() }} - {{ film.titre_FILMS }}
{% endblock %}

{% block content %}
    <div class="container ptb-50">
        <div class="row">
            <div class="col s12 offset-m3 m6">
            <div class="card">
                <div class="card-image">
                <img class="materialboxed" width="650" src="{{ film.image_FILMS }}">
                <a class="btn-floating btn-large pulse halfway-fab waves-effect waves-light"><i class="material-icons">cloud</i></a>
                </div>
                <div class="card-content">
                <span class="card-title">{{ film.titre_FILMS }}</span>
                
                <span class="card-title">
                    Realisateur(s) :
                    {% for r in realisateur %}
                        {{ r.prenom_REALISATEURS }} {{ r.nom_REALISATEURS }} {% if loop.last == false %} / {% endif %}
                    {% endfor %}
                </span>
                <span class="card-title">Ann√©e de sortie : {{ film.annee_FILMS }}</span>
                <span class="card-title">
                    Genre(s) :
                    {% for g in genre %}
                        {{ g.label_GENRES }} {% if loop.last == false %} / {% endif %}
                    {% endfor %}
                </span>
                <p>{{ film.description_FILMS }}</p>
                </div>
            </div>
            </div>
        </div>
    </div>
{% endblock %}    
