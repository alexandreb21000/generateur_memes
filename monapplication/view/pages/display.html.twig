{% extends 'layout/layout.html.twig' %}

{% block title %}
  {{ parent() }} - Create meme
{% endblock %}

{% block content  %}

<div class="uk-flex uk-flex-wrap-between uk-background-default uk-height-large uk-container uk-width1-1 ">
    <div class="uk-width-1-4 uk-flex">
        <h1 class="uk-text-bold size-title color-title uk-flex-middle">
        CREATE </br>
        YOUR </br>
        OWN </br>
        MEME </br>
        </h1>
    </div>
    
    <div class="uk-width-1-4">         
        <img class="block-img-h block-img-w contain-img" id="output"/>
    </div>

    <div class="uk-width-2-4 uk-flex uk-flex-column">
        <form method="POST" action="meme" enctype="multipart/form-data">
            <input type="file" name="img" onchange="loadFile(event)">
            <input type="text" id="texttop" name="texttop" placeholder="texttop">
            <input type="text" id="textbottom" name="textbottom" placeholder="textbottom">
            <input type="submit" name="submitForm" value="GÃ©nerer" >
        </form>
        
    </div>
</div>

    {% if urlImg != '' %}
        <img class="block-img-h block-img-w contain-img" src="img/{{ urlImg }}" />
        <a class="uk-button uk-button-default" href="#modal-sections" uk-toggle>Partager</a>
    {%  endif %}

    {% if message.msg != '' %}
        <h1 class="{{ message.type }}">{{ message.msg }}</h1>
    {% endif %}
    
<!-- Create Modal -->
<div id="modal-sections" uk-modal>
    <div class="uk-modal-dialog">
        <button class="uk-modal-close-default" type="button" uk-close></button>
        <div class="uk-modal-header">
            <h2 class="uk-modal-title marge-left">YOUR MEME</h2>
        </div>
        <div class="uk-modal-body">
            <div class="uk-margin uk-flex uk-flex-column">
                
                {% if urlImg != '' %}
                    <img class="block-img-h block-img-w contain-img" src="img/{{ urlImg }}" />
                {%  endif %}
           
                <input class="uk-input uk-form-width-large uk-form-small" type="text"  value="generateur_memes/meme/{{ urlImg }}" col="150" disabled>
                <!-- Your share button code -->
                <div id="fb-root"></div>
                <div class="marge-left fb-share-button" data-href="https://generateur_memes/meme/{{ urlImg }}" data-layout="button" data-size="small" data-mobile-iframe="true"><a target="_blank" href="https://www.facebook.com/sharer/sharer.php?u=https%3A%2F%2Fwww.facebook.com%2Falexandreb.boubou.7&amp;src=sdkpreparse" class="fb-xfbml-parse-ignore">Partager</a></div>
                <a href="https://twitter.com/share?ref_src=twsrc%5Etfw" class="marge-left twitter-share-button" data-show-count="false">Tweet</a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            </div>
        </div>
        <div class="uk-modal-footer uk-text-right">
            <button class="uk-button uk-button-default uk-modal-close" type="button">Cancel</button>
            <button class="uk-button uk-button-primary" type="button" href"download">Save</button>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}{{ parent() }}{% endblock %}






